    "/notifications": {
      "get": {
        "tags": ["Notifications"],
        "summary": "Get notifications",
        "description": "Retrieve all notifications for the current user",
        "operationId": "getNotifications",
        "security": [
          { "cookieAuth": [] }
        ],
        "responses": {
          "200": {
            "description": "List of notifications",
