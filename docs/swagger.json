      "delete": {
        "tags": ["Chores"],
        "summary": "Delete a chore",
        "description": "Delete a chore (Parents only)",
        "operationId": "deleteChore",
        "security": [
          { "cookieAuth": [] }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
