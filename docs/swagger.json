        "tags": ["Users"],
        "summary": "Get user's chores",
        "description": "Retrieve all chores assigned to a specific user",
        "operationId": "getUserChores",
        "security": [
          { "cookieAuth": [] }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "User ID",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
