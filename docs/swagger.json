  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "connect.sid"
      }
    },
    "schemas": {
      "HealthResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "object",
            "properties": {
              "status": {
                "type": "string",
                "example": "healthy"
              },
              "timestamp": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "dad@home"
          },
          "name": {
            "type": "string",
            "example": "Dad"
          },
          "role": {
            "type": "string",
            "enum": ["PARENT", "CHILD"],
            "example": "PARENT"
          },
          "points": {
            "type": "integer",
            "example": 150
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Chore": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "title": {
            "type": "string",
            "example": "Wash dishes"
          },
          "description": {
            "type": "string",
            "example": "Wash all dishes after dinner"
          },
          "status": {
            "type": "string",
            "enum": ["PENDING", "IN_PROGRESS", "COMPLETED"],
            "example": "PENDING"
          },
          "points": {
            "type": "integer",
            "example": 10
          },
          "assignedToId": {
            "type": "integer",
            "nullable": true,
            "example": 2
          },
          "assignedTo": {
            "$ref": "#/components/schemas/User"
          },
          "createdById": {
            "type": "integer",
            "example": 1
          },
          "createdBy": {
            "$ref": "#/components/schemas/User"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Notification": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "type": {
            "type": "string",
            "example": "CHORE_ASSIGNED"
          },
          "message": {
            "type": "string",
            "example": "You have been assigned a new chore: Wash dishes"
          },
          "isRead": {
            "type": "boolean",
            "example": false
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "RegisterRequest": {
        "type": "object",
        "required": ["email", "password", "name"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "newuser@home"
          },
          "password": {
            "type": "string",
            "minLength": 6,
            "example": "password123"
          },
          "name": {
            "type": "string",
            "example": "New User"
          },
          "role": {
            "type": "string",
            "enum": ["PARENT", "CHILD"],
            "default": "CHILD",
            "example": "CHILD"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "dad@home"
          },
          "password": {
            "type": "string",
            "example": "password123"
          }
        }
      },
      "CreateChoreRequest": {
        "type": "object",
        "required": ["title", "points"],
        "properties": {
          "title": {
            "type": "string",
            "example": "Wash dishes"
          },
          "description": {
            "type": "string",
            "example": "Wash all dishes after dinner"
          },
          "points": {
            "type": "integer",
            "minimum": 0,
            "example": 10
          },
          "assignedToId": {
            "type": "integer",
            "nullable": true,
            "example": 2
          }
        }
      },
      "UpdateChoreRequest": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "Wash dishes"
          },
